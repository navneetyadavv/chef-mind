{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@repo/types": ["packages/types/index.ts"],
      "@repo/api": ["packages/api/index.ts"],
      "@repo/ui": ["packages/ui/src/index.ts"]
    }
  }
}
